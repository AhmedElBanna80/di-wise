{
  "compilerOptions": {
    // Type Checking
    "noUncheckedIndexedAccess": true,
    "strict": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Emit
    "stripInternal": true,

    // Interop Constraints
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true,

    // Language and Environment
    "lib": ["ES2022", "ESNext.Decorators"],
    "target": "ES2022",

    // Projects
    "composite": true,

    // Completeness
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["dist"]
}
